include mixins

doctype
html( lang="en" )
	head
		title Blog application
		meta( charset='utf-8' )
		meta( http-equiv='X-UA-Compatible', content='IE=edge' )
		meta( name='viewport', content='width=device-width, initial-scale=1.0' )
		meta( name='description', content='Baking Bootstrap Snippets with Jade' )
		
		link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet")
 
		script( src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' )
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
		script( src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js' )
		script.

		style.
			body { overflow-x: hidden;}
			ul{
			list-style:none;
			}
			ul li.title{font-size: 30px;
			color: #3E7683;}
			.author{ color: gray;}
			.body{font-size: 20px;}
			
	body(style="padding-bottom:10rem;")
		.container

			
+nav("Blog", "dropdown_menu")

	if user
		+nav_item( "/users/profile"  ) Profile
		+nav_item( "/logout" ) Logout
	else

.row
	.col-md-4.col-sm-6.col-xs-12
		+panel("Post", "primary")
			each post in commentPosts
				ul 	
					li.author by: #{post.author}
					li.title #{post.title}
					br 
					li.body #{post.body}
				form(method="post", action='/comments/')
						div.input
							span.label Comment:
							textarea(name="comment", cols="40", rows="5")
						div.actions
							input(type="submit", value="Add comment")
				br
				br
			each comment in postComments
				ul 	
					li.author by: #{comment.author}
					li.body #{comment.body}

+bootswatch("darkly")

			script.
				$(document).ready(function(){
				
				$("#reload").click(function(){
				location.reload(true);
				});
				});	
